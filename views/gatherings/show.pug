extends ../layout

block content
    h2 #{gathering.purpose}
    p Date: #{gathering.date.toDateString()}
    p Location: #{gathering.location}
    p Purpose: #{gathering.purpose}
    a(href=`/gatherings/${gathering._id}/edit`) Edit
    form(action=`/gatherings/${gathering._id}?_method=DELETE`, method='POST')
        button(type='submit') Delete
